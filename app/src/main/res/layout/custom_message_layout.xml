<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgeProfile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/receiver_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/imgeProfile"
        android:background="@drawable/reciver_message_layout"
        android:text="@string/receiver_message_here"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/sender_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/receiver_message"
        android:text="@string/sender_message"
        android:background="@drawable/sender_message_layout"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@android:color/black"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>